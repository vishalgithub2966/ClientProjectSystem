@model ClientMSystem.Models.WeekData
@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded p-lg-3 pb-5 mt-2">
            <div class="card-header">
                <h1 class="text-center text-primary">Add Todays Update</h1>
            </div>
            <div class="card-body align-content-lg-start">
                <form method="post" asp-action="Create">
                    <div class="form-group">
                        <label class="fw-bold">ID</label>
                        <input type="text " asp-for="Id" class="form-control" placeholder="Enter Your Id " required autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label class="fw-bold">Day</label>
                        <input type="text " asp-for="Day" class="form-control" placeholder="Enter Day "  />
                    </div>
                    <div class="form-group">
                            <label class="fw-bold" for="date" asp-for="Date">Enter Todays Date</label>
                            <input type="date" id="date" name="date" asp-for="Date" class="form-control" placeholder="MM/DD/YYY" required autocomplete="off" />
                        </div>
                    <div class="form-group">
                        <label class="fw-bold">Task</label>
                        <input type="text " asp-for="Task" class="form-control" placeholder="Enter Your task"  />

                    </div>
                    <div class="form-group">
                        <label class="fw-bold">Hours</label>
                        <input type="text " asp-for="Hours" class="form-control" placeholder="Hours worked "  />

                    </div>
                    <div class="form-group">
                        <label class="fw-bold">UserName</label>
                        <input type="text " asp-for="UserName" class="form-control" placeholder="UserName " />

                    </div>

                    
                    

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-sm btn-outline-success m-4 float-lg-end" />


                        <br>

                        

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

